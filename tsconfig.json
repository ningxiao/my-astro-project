{
    "compilerOptions": {
        // 启用顶层 await 和其他现代 ESM 功能。
        "target": "ESNext",
        "module": "ESNext",
        // 启用用于 npm 软件包导入的 node 式模块解析，
        "moduleResolution": "node",
        // 启用 JSON 导入。
        "resolveJsonModule": true,
        // 启用更严格的转译，以获得更好的输出。
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    }
}
